@using Soup.Manga.Logic
@page "/Add/"
@inject MangaService service
@inject NavigationManager navmanager
<h3>Add</h3>

<div class="form-group">
    <label>Name</label>
    <input name="NameInput" type="text" class="form-control" @bind-value="manga.Name" />
</div>

<div class="form-group">
    <label>Author</label>
    <input name="" type="text" class="form-control" @bind-value="manga.Author" />
</div>
<div class="form-group">
    <label>Volume</label>
    <input type="text" class="form-control" @bind-value="manga.Volume" />
</div>

<button type="button" class="btn btn-primary" @onclick="AddManga">
    save changes
</button>

<NavLink href="@("/Manga")">
    <button type="button" class="btn btn-link">
        Go back
    </button>
</NavLink>

@code {
    Objects.Manga manga { get; set; }
    protected override void OnInitialized()
    {
        base.OnInitialized();
        manga = new Objects.Manga();

    }

    public void AddManga()
    {
        service.addManga(manga);
        manga = new Objects.Manga();
        // navmanager.NavigateTo("/");
    }
}
